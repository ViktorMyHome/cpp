    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "launch",
            "name": "GDB",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "GDB",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "stopOnEntry": true,
            "arguments": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
            "command": "/usr/bin/g++",
            "options": {
            "cwd": "/usr/bin"
            }
        }
    ]
}